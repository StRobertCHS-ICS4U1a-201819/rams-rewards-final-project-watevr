<RootWidget>:
    manager: manager
    do_default_tab: False
    # add a ScreenManager to the panel
    ScreenManager:
        id: manager
        Screen:
            id: sc1
            name: 'screen_one'

            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'dis_bg.png'
                        size: self.size
                        pos: self.pos

                Button:
                    pos: 550, 220
                    background_color: (0.75, 0, 0, 1)
                    text: 'Screen One'
                    size_hint: .2, .155
                    on_press:
                        root.manager.current = "screen_four"
                        root.reward()
        Screen
            id: sc2
            name: 'screen_two'
            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'rwd_bg.png'
                        size: self.size
                        pos: self.pos

                Button:
                    pos: 443, 220
                    background_color: (1, 0.49, 0.23, 1)
                    size_hint: .25, .128
                    text: 'Score History'
                    on_press:
                        root.manager.current = "screen_student_list"
        Screen
            id: sc3
            name: 'screen_three'
            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'sdt_bg.png'
                        size: self.size
                        pos: self.pos

                Button:
                    text: 'First'
                    background_color: (2.5, 2.5, 0, 1.0)
                    pos: 250, 225
                    size_hint: .1, .1
                    on_press:
                        root.manager.current = "screen_date_list"

                Button:
                    text: 'Second'
                    background_color: (1.0, 0.1, 1.0, 1.0)
                    pos: 593, 268
                    size_hint: .1, .1
                    on_press:
                        root.manager.current = "screen_date_list"

        Screen:
            id: sc4
            name: 'screen_four'
            BoxLayout:
                orientation: "vertical"
                size: root.size
                spacing: 20
                padding: 20

                Label:
                    text: "First Step"


                Spinner:
                    text: "Reward Activities"
                    values: root.rewardActivity
                    id: spinner_id
                    on_text: root.spinner_clicked(spinner_id.text)

                Button:
                    text: 'Next'
                    on_press:
                        root.manager.current = "QR_scanner"

        Screen:
            id: sc5
            name: 'QR_scanner'
            BoxLayout:
                orientation: "vertical"

                Label:
                    height: 20
                    size_hint_y: None
                    text: 'Testing the camera'

            KivyCamera:
                id: qrcam

            BoxLayout:
                orientation: "horizontal"
                height: 20
                size_hint_y: None

                Button:
                    id: butt_start
                    size_hint: 0.5,1
                    text: "start"
                    on_press: root.dostart()



                Button:
                    id: butt_detect
                    text: "detect"
                    size_hint: 0.5,1
                    on_press: root.capture()
        Screen:
            id: sc6
            name: 'screen_student_list'
            BoxLayout:
                orientation: "vertical"
                size: root.size
                spacing: 20
                padding: 20

                Spinner:
                    text: "Student List"
                    values: root.student_name_list
                    id: spinner_id
                    on_text: root.spinner_clicked2(spinner_id.text)

                Button:
                    text: 'Show history'
                    on_press:
                        root.manager.current = "screen_student_history"

                Button:
                    text: 'Home'
                    on_press:
                        root.manager.current = "screen_two"


        Screen:
            id: sc7
            name: 'screen_student_history'
            BoxLayout:
                orientation: "vertical"
                size: root.size
                spacing: 20
                padding: 20

                Label:
                    text: str(root.reward_history)

                Button:
                    text: 'Back Page'
                    on_press:
                        root.manager.current = "screen_student_list"


        Screen:
            id: sc8
            name: 'screen_date'
            BoxLayout:
                orientation: "vertical"
                size: root.size
                spacing: 20
                padding: 20

                Label:
                    text: 'Enter the date of the activities that you entered'

                Button:
                    text: 'Submit'
                    on_press:

                        root.add_date(ti.text)
                        root.set_date_history()

                TextInput:
                    id: _a
                    hint_text: 'hello'
                    multiline: 'False'
                    size: 500,400
                    size_hint: None, None
                    text:'Enter here'
                    id: ti

                Button:
                    text: 'Home'
                    on_press:
                        root.manager.current = "screen_one"
        Screen
            id: sc9
            name: 'screen_activity_list'
            BoxLayout:
                orientation: "vertical"
                size: root.size
                spacing: 20
                padding: 20

                Spinner:
                    text: "Activity List"
                    values: root.reward_activity
                    id: spinner_id
                    on_text: root.spinner_clicked3(spinner_id.text)

                Button:
                    text: 'Show history'
                    on_press:
                        root.manager.current = "screen_date_history"

                Button:
                    text: 'Home'
                    on_press:
                        root.manager.current = "screen_three"

        Screen:
            id: sc10
            name: 'screen_date_history'
            BoxLayout:
                orientation: "vertical"
                size: root.size
                spacing: 20
                padding: 20

                Label:
                    text: str(root.date_history)

                Button:
                    text: 'Back Page'
                    on_press:
                        root.manager.current = "screen_activity_list"






    TabbedPanelHeader:
        text: 'Distribution'
        screen: sc1.name
    TabbedPanelHeader:
        text: 'Student'
        screen: sc2.name
    TabbedPanelHeader:
        text: 'Reward'
        screen: sc3.name