#:kivy 1.10.1

<ScreenOne>:

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20

        Label:
            text: "Welcome Back"
        Button:
            text: "Reward Activities Page"
            on_press:
                root.manager.current = "screen2"

<ScreenTwo>:

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20

        Label:
            text: "Main Menu"
        Button:
            text: "Button 2"
            on_press:
                root.manager.current = "screen3"

    BoxLayout:
        orientation: "horizontal"
        size_hint: .25, .15

        Spinner:
            text: "Reward Activities"
            values: ["Highest Mark", "Average over 85", "Club Meeting", "Sport Team", "Activities Leader"]
            id: spinner_id
            on_text: root.spinner_clicked(spinner_id.text)

<ScreenThree>:
    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20

        Label:
            text: "Main Menu"
        Button:
            text: "Button 3"
            on_press:
                root.manager.current = "screen1"

<Manager>:
    id: screen_manager

    screen_one: screen_one
    screen_two: screen_two
    screen_three: screen_three

    ScreenOne:
        id: screen_one
        name: "screen1"
        manager: screen_manager

    ScreenTwo:
        id: screen_two
        name: "screen2"
        manager: screen_manager

    ScreenThree:
        id: screen_three
        name: "screen3"
        manager: screen_manager