<RootWidget>:
    manager: manager
    do_default_tab: False
    # add a ScreenManager to the panel
    ScreenManager:
        id: manager
        Screen:
            id: sc1
            name: 'screen_one'

            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'dis_bg.jpg'
                        size: self.size
                        pos: self.pos
                Image:
                    source: 'pyspin.zip'
                    pos: -300, 200
                Button:
                    pos: 500, 320
                    background_color: (1, 1, 1, 0)
                    text: 'Click Here!'
                    font_name: "brush"
                    font_size: 40
                    color: 0, 0, 0, 1
                    size_hint: .3, .155
                    on_press:
                        root.manager.current = "screen_four"
        Screen
            id: sc2
            name: 'screen_two'
            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'rwd_bg.jpg'
                        size: self.size
                        pos: self.pos
                Image:
                    source: 'pyspin.zip'
                    pos: -300, 200
                Button:
                    pos: 350, 450
                    background_color: (1, 1, 1, 0)
                    size_hint: .5, .155
                    text: 'Wanna See History?'
                    font_name: "brush"
                    font_size: 40
                    color: 1, 1, 1, 1
                    on_press:
                        root.manager.current = "screen_student_list"
        Screen
            id: sc3
            name: 'screen_three'
            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'sdt_bg.jpg'
                        size: self.size
                        pos: self.pos
                Image:
                    source: 'pyspin.zip'
                    pos: -300, 200
                Button:
                    text: 'Reward'
                    background_color: (1, 1, 1, 0)
                    pos: 50, 280
                    font_name: "brush"
                    font_size: 40
                    color: 1, 1, 1, 1
                    size_hint: .25, .155
                    on_press:
                        root.manager.current = "screen_activity_list"

                Button:
                    text: 'Delivered'
                    background_color: (1, 1, 1, 0)
                    pos: 30, 220
                    font_name: "brush"
                    font_size: 40
                    color: 1, 1, 1, 1
                    size_hint: .3, .155
                    on_press:
                        root.manager.current = "screen_activity_list"
        Screen:
            id: sc5
            name: 'QR_scanner'

            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'screen.jpg'
                        size: self.size
                        pos: self.pos
                KivyCamera:
                    id: qrcam
                    size_hint: 1, 2
                    pos: 0, -280

                Button:
                    id: butt_start
                    size_hint: 0.125, .1
                    font_size: 20
                    font_name: "thick"
                    text: "start"
                    pos: 130, 30
                    color: 1, 1, 1, 1
                    background_color: 0, 0, 0, 0
                    on_press: root.dostart()

                Button:
                    id: butt_detect
                    text: "detect"
                    font_size: 20
                    font_name: "thick"
                    size_hint: 0.125, .1
                    pos: 360, 30
                    color: 1, 1, 1, 1
                    background_color: 0, 0, 0, 0
                    on_press: root.capture()

                Button:
                    id: next
                    text: "next"
                    font_size: 20
                    font_name: "thick"
                    size_hint: 0.125, .1
                    pos: 590, 30
                    color: 1, 1, 1, 1
                    background_color: 0, 0, 0, 0
                    on_press:
                        root.manager.current = "screen_date"

        Screen:
            id: sc4
            name: 'screen_four'

            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'foggy.jpg'
                        size: self.size
                        pos: self.pos

                Label:
                    text: "Distribution"
                    pos: 0, 80
                    size_hint: 1, 1
                    font_size: 150
                    font_name: "letter"

                Button:
                    text: 'Next'
                    background_color: 0, 0, 0, 0
                    font_name: "letter"
                    pos: 320, 80
                    font_size: 50
                    color: 1, 1, 1, 1
                    size_hint: 0.2, 0.1
                    on_press:
                        root.manager.current = "QR_scanner"

                Spinner:
                    text: "Add Activities"
                    size_hint: 0.4, 0.1
                    font_name: "letter"
                    background_color: 0, 0, 0, 0
                    pos: 250, 150
                    font_size: 50
                    color: 1, 1, 1, 1
                    values: ["Highest Mark", "Average over 85", "Club Meeting", "Sport Team", "Activities Leader"]
                    id: spinner_id
                    on_text: root.spinner_clicked1(spinner_id.text)


        Screen:
            id: sc6
            name: 'screen_student_list'
            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'eleph.jpg'
                        size: self.size
                        pos: self.pos

                Label:
                    text: "Student"
                    font_name: "ani"
                    font_size: 150
                    pos: 0, 30

                Spinner:
                    text: "Student List"
                    background_color: 0, 0, 0, 0
                    font_name: "ani"
                    pos: 130, 170
                    font_size: 30
                    color: 1, 1, 1, 1
                    size_hint: 0.4, 0.1
                    values: ["Jerry Cui", "Evan Bai", "Justin Guo", "Waldon Zhang"]
                    id: spinner_id
                    on_text:
                        root.spinner_clicked2(spinner_id.text)

                Button:
                    text: 'Show history'
                    background_color: 0, 0, 0, 0
                    font_name: "ani"
                    pos: 330, 170
                    font_size: 30
                    color: 1, 1, 1, 1
                    size_hint: 0.4, 0.1
                    on_press:
                        root.manager.current = "screen_student_history"

        Screen:
            id: sc7
            name: 'screen_student_history'
            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'waves.jpg'
                        size: self.size
                        pos: self.pos

                Label:
                    text: str(root.reward_history)
                    background_color: 0, 0, 0, 0
                    font_name: "basic"
                    pos: 0, 0
                    font_size: 130
                    color: 0, 0, 0, 1

                Button:
                    text: 'Back'
                    background_color: 0, 0, 0, 0
                    font_name: "basic"
                    pos: 600, 70
                    font_size: 30
                    color: 0, 0, 0, 1
                    size_hint: 0.125, 0.1
                    on_press:
                        root.manager.current = "screen_student_list"

        Screen:
            id: sc8
            name: 'screen_date'
            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'paper.jpg'
                        size: self.size
                        pos: self.pos

                Button:
                    text: 'Submit'
                    font_name: "hand"
                    font_size: 20
                    color: 0, 0, 0, 1
                    background_color: 0, 0, 0, 0
                    size_hint: .125, .1
                    pos: 250, 100
                    on_press:
                        root.add_date(ti.text)
                        root.set_date_history()

                TextInput:
                    id: _a
                    font_name: "hand"
                    font_size: 20
                    color: 1, 1, 1, 1
                    hint_text: 'hello'
                    multiline: 'False'
                    size: 330,230
                    pos: 280, 120
                    background_color: 1, 1, 1, 0
                    size_hint: None, None
                    text:'Enter here'
                    id: ti

                Button:
                    text: 'Home'
                    font_name: "hand"
                    font_size: 20
                    background_color: 0, 0, 0, 0
                    color: 0, 0, 0, 1
                    size_hint: .125, .1
                    pos: 460, 100
                    on_press:
                        root.manager.current = "screen_one"
        Screen
            id: sc9
            name: 'screen_activity_list'
            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'violet.jpg'
                        size: self.size
                        pos: self.pos

                Label:
                    text: "Rewards"
                    font_name: "violet"
                    pos: 0, 50
                    font_size: 150

                Spinner:
                    text: "Select Activities"
                    background_color: (1, 1, 1, 0)
                    pos: 120, 90
                    font_name: "sig"
                    font_size: 30
                    color: 1, 1, 1, 1
                    size_hint: .25, .155
                    values: ["Highest Mark", "Average over 85", "Club Meeting", "Sport Team", "Activities Leader"]
                    id: spinner_id
                    on_text: root.spinner_clicked3(spinner_id.text)

                Button:
                    text: 'Show history'
                    background_color: (1, 1, 1, 0)
                    pos: 480, 90
                    font_name: "sig"
                    font_size: 30
                    color: 1, 1, 1, 1
                    size_hint: .25, .155
                    on_press:
                        root.manager.current = "screen_date_history"

        Screen:
            id: sc10
            name: 'screen_date_history'
            FloatLayout:
                canvas:
                    Rectangle:
                        source: 'red.jpg'
                        size: self.size
                        pos: self.pos

                Label:
                    text: "HIST"
                    font_name: "big"
                    font_size: 500
                    color: 1, 1, 1, 1
                    pos: 20, 100

                Label:
                    text: "ORY"
                    font_name: "big"
                    font_size: 500
                    color: 1, 1, 1, 1
                    pos: 0, -190

                Label:
                    text: str(root.date_history)
                    font_name: "thick"
                    font_size: 80
                    color: 0, 0, 0, 1
                    pos: 0, 0

                Button:
                    text: 'Back'
                    background_color: (1, 1, 1, 0)
                    pos: 600, 30
                    font_name: "thick"
                    font_size: 40
                    color: 1, 1, 1, 1
                    size_hint: .25, .155
                    on_press:
                        root.manager.current = "screen_activity_list"















    TabbedPanelHeader:
        text: 'Distribution'
        screen: sc1.name
    TabbedPanelHeader:
        text: 'Student'
        screen: sc2.name
    TabbedPanelHeader:
        text: 'Reward'
        screen: sc3.name
