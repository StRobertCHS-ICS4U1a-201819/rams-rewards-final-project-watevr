<TabbedPanelStrip>
    canvas:
        Color:
            rgba: (0, 1, 0, 1) # green
        Rectangle:
            size: self.size
            pos: self.pos


<Test>:
    do_default_tab: False

    tab_size_hint_x: 1.5

    TabbedPanelItem:
        text: 'Activities'

        BoxLayout:
            orientation: "vertical"
            size: root.size
            spacing: 20
            padding: 20

            Label:
                text: 'Choose from a list of rewards activities '

            Spinner:
                text: "Reward Activities"
                size_hint_y: .40
                values: ["Highest Mark", "Average over 85", "Club Meeting", "Sport Team", "Activities Leader"]
                id: spinner_id
                on_text: root.spinner_clicked(spinner_id.text)





    TabbedPanelItem:
        text: 'Students'


        BoxLayout:
            orientation: "vertical"
            size: root.size
            spacing: 20
            padding: 20

            Label:
                text: 'Use your phone to scan the barcode and enter the id of student in the box below '

            TextInput:
                id: _a
                hint_text: 'hello'
                multiline: 'False'
                size: 500,450
                size_hint: None, None
                text:'Enter here'
                id: ti

            Button:
                text: 'Submit'
                on_press: root.id_inputted(ti.text)


